---
import pages from '../docs-manifest.json';

let prev;
let next;
for (let n = 0; n < pages.pages.length; n++) {
  if (pages.pages[n].pathname === Astro.request.url.pathname) {
    if (pages.pages[n - 1]) prev = pages.pages[n - 1];
    if (pages.pages[n + 1]) next = pages.pages[n + 1];
    break;
  }
}
---

<style lang="scss">
@use "../../tokens" as *;

.nav {
  display: grid;
  grid-gap: 2rem;
  grid-template-columns: 1fr 1fr;
  margin-top: 4rem;
  padding-top: 2rem;
  width: 100%;
}

.prev,
.next {
  border: 1px solid $color__blue;
  position: relative;
  text-decoration: none;
  padding: 1.25rem;
}

.next {
  .icon {
    right: 1.25rem;
  }

  &:hover .icon {
    transform: translateX(25%);
  }
}

.prev {
  text-align: right;

  .icon {
    left: 1.25rem;
    transform: rotate(180deg);
  }

  &:hover .icon {
    transform: rotate(180deg) translateX(25%);
  }
}

.icon {
  height: 2rem;
  margin-top: -1rem;
  position: absolute;
  stroke-width: 1;
  top: 50%;
  transition: transform 200ms cubic-bezier(0, 0.4, 0.6, 1);
  width: 2rem;
}

.label {
  display: block;
  font-size: 10pt;
  letter-spacing: 0.05em;
  font-weight: 550;
  margin-bottom: 0.5rem;
  text-transform: uppercase;
}

.title {
  display: block;
  font-size: 18pt;
}
</style>

<nav class="nav">
  {prev ? <a href={prev.pathname} class="prev"><span class="label">Previous Page</span><span class="title">{prev.title}</span><svg class="icon"><use xlink:href="#arrow-r" /></svg></a> : <span />}
  {next && <a href={next.pathname} class="next"><span class="label">Next Page</span><span class="title">{next.title}</span><svg class="icon"><use xlink:href="#arrow-r" /></svg></a>}
</nav>
