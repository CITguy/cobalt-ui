---
let currentPage = Astro.request.url.pathname;

const stars = (await fetch('https://api.github.com/repos/drwpow/cobalt-ui')
  .then((res) => res.json())).stargazers_count;
---

<style lang="scss">
  nav {
    display: flex;
    justify-content: flex-end;
    padding: 1rem 2rem;
  }

  a {
    color: white;
    padding: 1em;
  }
</style>

<nav>
  <a href="/" aria-current={currentPage === '/' ? 'page' : undefined}>Introduction</a>
  <a href="/editor" aria-current={currentPage === '/editor' ? 'page' : undefined}>Editor</a>
  <a href="/docs" aria-current={currentPage === '/docs' ? 'page' : undefined}>Documentation</a>
  <a class="github-badge" href="https://github.com/drwpow/cobalt-ui">
    {stars}
  </a>
</nav>
